<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="EasyDietLight" parent="AppBaseTheme">
        <!-- default background -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- default font -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <!-- You can change the text color in all widgets across the whole app -->
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   a darker variant of the primary color, used for
       the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- others -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <!-- edit texts -->
        <item name="android:editTextBackground">@drawable/fill_text</item>
        <item name="android:editTextColor">@color/colorBackground</item>
    </style>

    <!-- general button green -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
